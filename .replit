run = "uvicorn main:app --host 0.0.0.0 --port 8000"
entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
packages = ["cargo", "freetype", "hdf5", "lcms2", "libGL", "libGLU", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "rustc", "tcl", "tesseract", "tk", "zlib"]
channel = "stable-24_05"

[[ports]]
localPort = 8000
externalPort = 80

[workflows]
runButton = "Start API Server"

[[workflows.workflow]]
name = "Start API Server"
author = 43316633
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn main:app --host 0.0.0.0 --port 8000 --reload"
